{
	"manifest_version": 2,
	"name": "Bitbucket Revert",
	"short_name": "Bitbucket RV",
	"icons": { 
		"16": "icon16.png",
		"32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png" 
	},
	"description": "Bitbucket pull request revert script generator",
	"version": "1.1",
	"options_page": "options.html",
	"options_ui": {
		"chrome_style": true,
		"page": "options.html"
	},
	"permissions": ["tabs", "https://*/pull-requests/*", "storage"],
	"browser_action": {
		"default_icon": "icon32.png"
	},
	"background": {
		"scripts": ["revert.js", "FileSaver.js"]
	}
}
